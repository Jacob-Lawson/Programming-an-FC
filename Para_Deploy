void setup() { 
  
 Serial.begin(9600); // initialize the serial communication
                     // Note: analog pins are automatically set as inputs
  pinMode(,INPUT)
  pinMode(,OUTPUT)
  pinMode(,OUTPUT)   //set two digital pins as outputs that are on low state
}

void loop() {

digitalRead(/*output pin*/,digitalRead(/*input pin*/) )
digitalWrite()
apogeedetection();          //calling the apogee reading
  if (apogee == 1 ) {
    digitalRead(/**/,HIGH)
    digitalRead(/**/,HIGH)  //set two digital pins to be HIGH
    deploypayload();
    }
  }

// starting the apogee function
void apogeedetection() { 
int a = analogRead(A0);     // get a reading from the altitude potentiometer on A0
Serial.println(a);          // print out the current altitude
if (a<Amax || a==Amax){     //if altitude is over Amax, set new Amax
  Amax = a;                 //set new Amax
  Serial.println(Amax);
}else if (a>b){
  Serial.print("APOGEE REACHED AT,%d"); Serial.print(Amax); 
  apogee = 1;
        }

}
